<%- include('components/header'); %>

<p class="text-lg py-4 text-center">This is the home page for blog website!</p>
<section class="flex flex-col gap-5 justify-center w-full h-[60vh]">

   <% blogs.forEach(post => { %>
         <div class="flex flex-col gap-3 bg-zinc-900 hover:bg-zinc-700 hover:cursor-pointer p-8 rounded-md transition-all hover:shadow-lg hover:outline-2 outline-none hover:outline-zinc-300 mx-3 sm:mx-24 md:mx-40 lg:mx-56 xl:mx-64" >
            <h3 class="text-lg font-semibold"><%= post.title %></h3>
            <p> <%= post.content.substring(0, 60) + "..." %>
               <span class="text-blue-800" >
                  <a href="/posts/<%=post._id%>">(Read more)</a>    
               </span>
            </p>
         </div>
   <% }) %>
</section>

<%- include('components/footer'); %>

