<%- include('components/header'); %>

<form class="flex flex-col justify-center items-center h-[72vh] sm:mx-24 md:mx-40 lg:mx-56 xl:mx-64 " action="/" method="post">
   <div class="flex flex-col gap-2 py-4 w-full " >
      <label class="px-3" for="postTitleInput">Title:</label>
      <input class="text-white rounded-md py-3 px-3 bg-zinc-600 " placeholder="Add title" autocomplete="off" type="text" name="postTitle" id="postTitleInput" >
   </div>
   <div class="flex flex-col gap-2 py-4 w-full " >
      <label class="px-3" for="postContentInput">Content:</label>
      <textarea class="text-white rounded-md resize-none py-3 px-3 bg-zinc-600 " placeholder="Add content" autocomplete="off" name="postContent" id="postContentInput" cols="30" rows="10"></textarea>
   </div>
   <button class="rounded-md px-6 sm:px-8 py-3 bg-blue-500 transition-all hover:bg-blue-700 " type="submit">Add blog</button>
</form>

<%- include('components/footer'); %>